<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <include android:id="@+id/toolbar"
        layout="@layout/toolbar_layout" />

    <EditText
        android:id="@+id/et_content"
        android:layout_width="match_parent"
        android:layout_height="@dimen/opinion_edittext_height"
        android:background="@drawable/et_shape_search"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:padding="10dp"
        android:hint="@string/feedback_hint"
        android:gravity="top"
        android:lineSpacingExtra="5dp"
        android:textColor="@color/tv_mid"
        android:layout_below="@+id/toolbar"
        android:textSize="@dimen/goods_car_tv_size"/>

    <LinearLayout
        android:id="@+id/ll_notice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="* 还可输入 "
            android:layout_marginLeft="10dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:textSize="@dimen/register_sex_tv_size"
            android:textColor="@color/tv_gray"/>

        <TextView
            android:id="@+id/surplus_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="255"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:textSize="@dimen/register_sex_tv_size"
            android:textColor="@color/tv_green"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" 个字"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:textSize="@dimen/register_sex_tv_size"
            android:textColor="@color/tv_gray"/>
    </LinearLayout>

    <Button
        android:id="@+id/bt_commit_opinions"
        android:layout_width="match_parent"
        android:layout_height="@dimen/register_edittext_height"
        android:layout_below="@id/ll_notice"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/theme_bg_bt_selector"
        android:text="@string/commit"
        android:textSize="@dimen/total_money_tv_size"
        android:textColor="@color/white"/>
</RelativeLayout>

