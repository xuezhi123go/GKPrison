              android:background="@color/bg"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <include layout="@layout/toolbar_layout"
             android:id="@+id/toolbar"/>

    <ImageView
        android:id="@+id/iv_my_wallet"
