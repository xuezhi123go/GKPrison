<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@android:color/black"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/vconf_chairtext"
        android:layout_width="136dip"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:drawablePadding="4.0dip"
        android:gravity="left|center_vertical"
        android:padding="10.0dp"
        android:singleLine="true"
        android:text="@string/vconf_Apply4AdministrativePrivileges"
        android:textColor="@color/white"
        android:textSize="@dimen/LargeTextSize" />

    <TextView
        android:id="@+id/vconf_speakertext"
        android:layout_width="match_parent"
        android:layout_height="44dip"
        android:clickable="true"
        android:drawablePadding="4.0dip"
        android:gravity="left|center_vertical"
         android:padding="10.0dp"
        android:singleLine="true"
        android:text="@string/vconf_Apply4Speaker"
        android:textColor="@color/white"
        android:textSize="@dimen/LargeTextSize" />

    <!-- android:background="@drawable/vcon_more_info_white_btn_bg" -->
    <TextView
        android:id="@+id/vconfInfo_Text"
        android:layout_width="match_parent"
        android:layout_height="44dip"
        android:clickable="true"
        android:drawablePadding="4.0dip"
        android:gravity="left|center_vertical"
        android:padding="10.0dp"
        android:singleLine="true"
        android:text="@string/vconf_info_title"
        android:textColor="@color/white"
        android:textSize="@dimen/LargeTextSize" 
        android:visibility="gone"/>

    <TextView
        android:id="@+id/vconfStatisticalInformation_Text"
        android:layout_width="match_parent"
        android:layout_height="44dip"
        android:clickable="true"
        android:drawablePadding="4.0dip"
        android:gravity="left|center_vertical"
        android:padding="10.0dp"
        android:singleLine="true"
        android:text="@string/vconf_StatisticalInformation"
        android:textColor="@color/white"
        android:textSize="@dimen/LargeTextSize" />
    
    <TextView
        android:id="@+id/vconfDelay"
        android:layout_width="match_parent"
        android:layout_height="44dip"
        android:clickable="true"
        android:drawablePadding="4.0dip"
        android:gravity="left|center_vertical"
        android:padding="10.0dp"
        android:singleLine="true"
        android:text="延长30分钟"
        android:textColor="@color/white"
        android:textSize="@dimen/LargeTextSize" />

</LinearLayout>