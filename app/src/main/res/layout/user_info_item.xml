<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/user_info_item_height"
    android:background="@color/white">

    <TextView
        android:id="@+id/tv_user_info_left"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/user_info_item_height"
        android:text="@string/name"
        android:gravity="center_vertical"
        android:textSize="@dimen/user_info_tv_size"
        android:textColor="@color/tv_mid"/>

    <TextView
        android:id="@+id/tv_user_info_right"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/user_info_item_height"
        android:layout_alignParentRight="true"
        android:gravity="center_vertical"
        android:textSize="@dimen/user_info_tv_size"
        android:textColor="@color/tv_bg"/>

</RelativeLayout>