<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black" >

    <com.pc.ui.layout.SimpleGestureDetectorRelative
        android:id="@+id/pic_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center" >

        <android.opengl.GLSurfaceView
            android:id="@+id/gl_SV"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical" >
        </android.opengl.GLSurfaceView>

        <ImageView
            android:id="@+id/staticpic_Img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:background="@color/black"
            android:contentDescription="@null"
            android:scaleType="center"
            android:src="@drawable/camera_big"
            android:visibility="visible" >
        </ImageView>

        <ImageView
            android:id="@+id/iv_example"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/splash_tablet"
            android:scaleType="fitXY"
            android:visibility="gone"/>
    </com.pc.ui.layout.SimpleGestureDetectorRelative>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="bottom">

        <ImageView
            android:id="@+id/iv_meeting_ic_card"
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:src="@drawable/ic_card"
            android:scaleType="fitXY"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/iv_meeting_icon"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginStart="200dp"
            android:src="@drawable/default_icon"
            android:scaleType="fitXY"
            android:visibility="gone"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="end|center_vertical">

            <Button
                android:id="@+id/bt_through_examine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="审核通过"
                android:background="@drawable/theme_bg_bt_selector"
                android:textColor="@color/white"
                android:layout_marginEnd="20dp"
                android:visibility="gone"/>

            <Button
                android:id="@+id/bt_not_through_examine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="审核失败"
                android:background="@drawable/theme_bg_bt_selector"
                android:textColor="@color/white"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="10dp"
                android:visibility="gone"/>
        </LinearLayout>
    </FrameLayout>
</FrameLayout>