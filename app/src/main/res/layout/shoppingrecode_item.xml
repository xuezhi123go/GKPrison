<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="#f1f1f1"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">
        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:background="@color/tv_gray"/>
        <TextView
            android:id="@+id/tv_paytime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2015年11月18日"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:textColor="@color/tv_bg"
            android:gravity="center"/>
        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:background="@color/tv_gray"/>

    </LinearLayout>
    <ImageView
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:src="@drawable/shoppinghead"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:scaleType="fitXY"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"

        android:orientation="vertical"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="交易号："
                android:textColor="@color/tv_mid"/>

            <TextView
                android:id="@+id/tv_alipay_trading_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="201511280987654321"
                android:textColor="@color/tv_mid"/>
        </LinearLayout>

        <View
            android:id="@+id/fenge1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#dadada"/>

        <com.gkzxhn.gkprison.widget.view.CustomListView
            android:id="@+id/lv_recode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:divider="@color/transparent"></com.gkzxhn.gkprison.widget.view.CustomListView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_marginLeft="5dp"
                android:id="@+id/tv_shopping_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="共"
                android:textColor="@color/tv_bg"
                android:textSize="12sp"/>
            <TextView
                android:id="@+id/tv_qty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/tv_bg"
                android:textSize="12sp"
                android:text="3"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="件商品"
                android:layout_weight="1"
                android:textColor="@color/tv_bg"
                android:textSize="12sp"/>
           <LinearLayout
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"

               android:orientation="horizontal">
            <TextView
                android:id="@+id/tvshoping_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="合计："
                android:textColor="@color/tv_bg"
                android:textSize="16sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¥"
                android:textSize="16sp"
                android:textColor="@color/tv_bg"/>

            <TextView
                android:id="@+id/tvshopping_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="59.80"
                android:textSize="16sp"
                android:textColor="@color/tv_bg"/>
            <TextView
                android:id="@+id/tv_yunfei"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="（含运费）"
                android:textColor="@color/tv_bg"
                android:textSize="12sp"
                android:layout_marginLeft="5dp"/>
           </LinearLayout>
        </LinearLayout>
        <View
            android:id="@+id/fenge"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#dadada"
            />

        <TextView
            android:id="@+id/tv_transact_state"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:textColor="@color/tv_green"
            android:text="交易成功"
            android:textSize="16sp"
            android:layout_gravity="right"
            android:gravity="center_vertical"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="10dp"/>
    </LinearLayout>


</LinearLayout>