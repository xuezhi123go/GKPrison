<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">
        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:background="#999999"/>
        <TextView
            android:id="@+id/tv_paytime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:text="2015年11月18日"
            android:textColor="@color/tv_bg"
            android:gravity="center"/>
        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:background="#999999"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@android:color/white">
        <TextView
            android:id="@+id/tv_transtype"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="交易方式:"
            android:textColor="#333333"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"/>
        <TextView
            android:id="@+id/tv_transtype_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="支付宝"
            android:layout_alignBaseline="@+id/tv_transtype"
            android:layout_toRightOf="@+id/tv_transtype"
            android:textColor="#333333"/>
        <TextView
            android:id="@+id/tv_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="汇款:"
            android:textColor="#333333"
            android:layout_below="@+id/tv_transtype"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"/>
        <TextView
            android:id="@+id/tv_pay_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#1F9400"
            android:text="1200.00"
            android:layout_alignBaseline="@+id/tv_money"
            android:layout_toRightOf="@+id/tv_money"/>
        <TextView
            android:id="@+id/tv_accout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="对方账户:"
            android:textColor="#333333"
            android:layout_below="@+id/tv_money"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"/>
      <TextView
          android:id="@+id/tv_prison_name"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="德山监狱"
          android:layout_alignBaseline="@+id/tv_accout"
          android:layout_toRightOf="@+id/tv_accout"
          android:textColor="#333333"/>
       <TextView
           android:id="@+id/tv_summary"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_below="@+id/tv_accout"
           android:layout_marginLeft="5dp"
           android:layout_marginTop="10dp"
           android:layout_marginBottom="10dp"
           android:text="摘要:"
           android:textColor="#333333"/>
        <TextView
            android:id="@+id/tv_prisonnernum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_toRightOf="@+id/tv_summary"
            android:layout_alignBaseline="@+id/tv_summary"
            android:text="囚号123283356"
            android:textColor="#333333"
           />
    </RelativeLayout>
</LinearLayout>