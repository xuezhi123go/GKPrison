<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@android:color/black"
    android:orientation="vertical" >

    <!-- android:background="@drawable/vcon_more_info_white_btn_bg" -->

    <TextView
        android:id="@+id/ExitConf_Text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:singleLine="true"
        android:padding="10dip"
        android:text="@string/vconf_ExitConf"
        android:textColor="@color/white"
        android:textSize="@dimen/LargeTextSize" />

    <!-- android:drawableLeft="@drawable/vconf_finish_selector" android:background="@drawable/vcon_more_info_white_btn_bg" -->

    <TextView
        android:id="@+id/EndConf_Text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:singleLine="true"
         android:padding="10dip"
        android:text="@string/vconf_EndConf"
        android:textColor="@color/white"
        android:textSize="@dimen/LargeTextSize" />

</LinearLayout>