<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_home_news1"
    android:layout_width="match_parent"
    android:layout_height="@dimen/home_focus_news_height"
    android:background="@drawable/item_selector">

    <ImageView
        android:id="@+id/iv_news_icon"
        android:layout_width="0dp"
        android:layout_height="@dimen/home_focus_news_height"
        android:layout_weight="1"
        android:src="@drawable/default_img"
        android:padding="10dp"
        android:scaleType="fitXY" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="@dimen/home_focus_news_height"
        android:layout_weight="2.2"
        android:paddingRight="5dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_news_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/focus_news_title"
            android:maxLines="2"
            android:paddingTop="5dp"
            android:gravity="center_vertical"
            android:textColor="@color/tv_bg"
            android:textSize="@dimen/home_focus_title_tv_size" />

        <TextView
            android:id="@+id/tv_news_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/focus_news_simple"
            android:ellipsize="end"
            android:maxLines="3"
            android:textColor="@color/tv_mid"
            android:textSize="@dimen/home_focus_content_tv_size"
            android:lineSpacingExtra="3dp"
            android:paddingBottom="5dp" />
    </LinearLayout>
</LinearLayout>